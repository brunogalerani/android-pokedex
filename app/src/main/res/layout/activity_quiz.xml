<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="bhg.pokedex.activity.QuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1- Which was the first pokemon choosen by May?"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/q1a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pikachu" />

                <RadioButton
                    android:id="@+id/q1a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bulbasaur" />

                <RadioButton
                    android:id="@+id/q1a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Torchic" />

                <RadioButton
                    android:id="@+id/q1a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mudkip" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginInfoView">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2- Name of character who has most apperence in Pokemon Animation till gen. IV  with Ash."
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/q2a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brock" />

                <RadioButton
                    android:id="@+id/q2a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Misty" />

                <RadioButton
                    android:id="@+id/q2a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dawn" />

                <RadioButton
                    android:id="@+id/q2a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="May" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginInfoView">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3- Which of the following pokemon was NOT starter in Sinnoh?"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/q3a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Treecko" />

                <RadioButton
                    android:id="@+id/q3a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Piplup" />

                <RadioButton
                    android:id="@+id/q3a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chimchar" />

                <RadioButton
                    android:id="@+id/q3a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Turtwig" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginInfoView">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4- Natu evolve into..."
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/q4a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xatu" />

                <RadioButton
                    android:id="@+id/q4a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nidoqueen" />

                <RadioButton
                    android:id="@+id/q4a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nidoking" />

                <RadioButton
                    android:id="@+id/q4a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Staraptor" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/question5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginInfoView">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5- Which pokemon can evolve using water stone?"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/q5a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gible" />

                <RadioButton
                    android:id="@+id/q5a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pikachu" />

                <RadioButton
                    android:id="@+id/q5a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vaporeon" />

                <RadioButton
                    android:id="@+id/q5a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lombre" />
            </RadioGroup>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/pokeInfoMarginStats"
                android:background="@android:color/holo_red_dark"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
